<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_blue_transparent"
    android:layout_margin="@dimen/default_margin">

    <EditText
        android:id="@+id/popup_value"
        style="@style/Valuefont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:textColorHint="@color/light_grey"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/popup_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:background="@color/dark_blue_transparent"
        android:popupBackground="@color/dark_blue_transparent"
        app:layout_constraintTop_toBottomOf="@+id/popup_value"
        />

    <EditText
        android:id="@+id/popup_description"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Textfont"
        android:inputType="numberDecimal"
        android:textColorHint="@color/light_grey"
        app:layout_constraintTop_toBottomOf="@+id/popup_spinner"
        />

</androidx.constraintlayout.widget.ConstraintLayout>