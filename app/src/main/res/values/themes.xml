<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PocketsCoins" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Title app font -->
    <style name="Titleappfont">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">@font/titleappfont</item>
    </style>
    <!-- Title font -->
    <style name="Titlefont">
        <item name="android:textColor">@color/med_blue</item>
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">@font/coolvetica</item>
    </style>
    <!-- Text font -->
    <style name="Textfont">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/textfont</item>
    </style>
    <!-- Bold text font -->
    <style name="Textfontbold">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/textfontbold</item>
    </style>
    <!-- Values theme -->
    <style name="Valuefont">
        <item name="android:textColor">@color/medplus_blue</item>
        <item name="android:textSize">60sp</item>
        <item name="android:fontFamily">@font/coolvetica</item>
    </style>
    <style name="SpinnerItem">
        <item name="android:textColor">#993399</item>
    </style>

</resources>